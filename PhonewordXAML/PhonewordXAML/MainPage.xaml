<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhonewordXAML.MainPage"
             xmlns:local="clr-namespace:PhonewordXAML">

    <StackLayout Padding="20">
        <Label Text="Enter word: " FontSize="Large"/>
        <Entry Text="123-456-7890" x:Name="phoneNumberText"/>
        <Button x:Name="translateButton" Clicked="OnTranslate"
            TextColor="{x:Static local:SharedResources.ButtonTextColor}"
                Text="Translate"
            BackgroundColor="{x:Static local:SharedResources.ButtonBkColor}"/>
        <Button x:Name="callButton" Clicked="OnCall"/>
    </StackLayout>

</ContentPage>
